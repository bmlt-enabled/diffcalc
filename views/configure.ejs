<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Configure</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class="container">
        <h1>Configuration</h1>

        <form method="post" action="/<%=hash%>/configure/save">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= (!!configuration)?configuration.title:'' %>">
            </div>

            <div class="form-group">
                <label for="message">Message</label>
                <textarea name="message" id="message" rows="10"><%= (!!configuration)?configuration.message:'' %></textarea>
            </div>

            <input type="submit" value="Save Configuration">
        </form>

        <div class="admin-section">
            <h2 style="margin-bottom: 15px; color: #667eea;">Export Data</h2>
            <p>Download all submitted data: <a href="/<%=hash%>/export">Export to file</a></p>
        </div>

        <div class="admin-section">
            <h2 style="margin-bottom: 15px; color: #667eea;">Submitted Records</h2>
            <% if (records && records.length > 0) { %>
                <p style="margin-bottom: 15px; color: #666;"><%= records.length %> record(s) found</p>
                <div class="records-table-wrapper">
                    <table class="records-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Date</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% records.forEach(function(record) { %>
                                <tr>
                                    <td><%= record.firstname %> <%= record.lastname %></td>
                                    <td><%= record.month %>/<%= record.day %>/<%= record.year %></td>
                                    <td><%= record.email || '-' %></td>
                                    <td class="actions-cell">
                                        <a href="/<%=hash%>/record/edit/<%= encodeURIComponent(record._key) %>" class="btn-edit">Edit</a>
                                        <form method="post" action="/<%=hash%>/record/delete" class="delete-form" onsubmit="return confirm('Are you sure you want to delete this record for <%= record.firstname %> <%= record.lastname %>?');">
                                            <input type="hidden" name="key" value="<%= record._key %>">
                                            <button type="submit" class="btn-delete">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p style="color: #888; font-style: italic;">No records submitted yet.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
